CONDA_INSTALL_LOCATION="~/miniconda3"

__conda_setup="$(${CONDA_INSTALL_LOCATION}/bin/conda 'shell.zsh' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "${CONDA_INSTALL_LOCATION}/etc/profile.d/conda.sh" ]; then
        . "${CONDA_INSTALL_LOCATION}/etc/profile.d/conda.sh"
    else
        export PATH="${CONDA_INSTALL_LOCATION}/bin:$PATH"
    fi
fi
unset __conda_setup


if [[ $SHELL == */zsh ]]
then
    if [ ! -d ~/git/external/conda-zsh-completion ]
    then
    git clone https://github.com/esc/conda-zsh-completion ~/git/external/conda-zsh-completion
    fi

    fpath+=~/git/external/conda-zsh-completion
fi
